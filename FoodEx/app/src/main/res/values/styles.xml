<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LogInButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/log_in_button_height</item>
        <item name="android:paddingStart">@dimen/log_in_button_paddings</item>
        <item name="android:paddingEnd">@dimen/log_in_button_paddings</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="LogInTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:ems">10</item>
    </style>
    <style name="LabelTextViewStyle">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/amber_primary</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    <style name="TextButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/amber_primary</item>
    </style>
</resources>